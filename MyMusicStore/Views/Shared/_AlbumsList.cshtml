@model MyMusicStore.Domain.Models.Album
            <div class="col-lg-4 p-1">
            <div class="col">
          <div class="card shadow-sm">
           <img class="bd-placeholder-img card-img-top" src = @Model.Image>
            <div class="card-body">
              <h6 class="card-text">@Model.Title - @Model.Artist.Name</h6>
              <span class="badge bg-primary m-1">@Model.Price.ToString("c")</span>
              <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex pt-1">
                 <a  asp-controller="ArtistsPage" asp-action="Details" asp-route-ArtistId="@Model.ArtistId" asp-route-AlbumId="@Model.Id" class="btn btn-outline-secondary me-1 flex-grow-1">Перейти к альбому</a>
                 <a  asp-controller="ShopCart" asp-action="Buy" asp-route-id="@Model.Id" class="btn btn-outline-secondary me-1 flex-grow-1">Добавить в корзину</a>
                </div>
              </div>
            </div>
          </div>
        </div>
         </div>
