@model IEnumerable<MyMusicStore.Domain.Models.Artist>
@{
    ViewData["Title"] = "Artists";
}
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    @foreach (var item in Model)
    {
        <div class="col-lg-3">
          <div class="card shadow-sm">
              <img src=@item.Image class="rounded-3 shadow-bg" alt="Avatar" />
            <div class="card-body">
                <h5 class="text-center">@item.Name</h5>
                <div class="d-flex justify-content-between align-items-center">
                <a asp-action="Albums" asp-route-id="@item.Id" class="btn btn-secondary my-2">Перейти к артисту</a>
              </div>
            </div>
          </div>
        </div>
    }
</div>

